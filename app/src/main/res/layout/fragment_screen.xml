<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_margin_padding_small"
            app:cardCornerRadius="@dimen/global_card_view_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/global_margin_padding_large">

                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="Resolution (PX)"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_resolution_px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="Resolution (DP)"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_resolution_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="DPI (X)"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dpi_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="DPI (Y)"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dpi_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="DPI"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dpi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="Density"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_density"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/global_margin_padding"
                        android:paddingTop="@dimen/global_margin_padding_small">

                        <TextView
                            android:layout_width="@dimen/sensor_card_title_width"
                            android:layout_height="wrap_content"
                            android:text="Multitouch"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_multitouch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/global_margin_padding"
                            android:text="Detail"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/global_text_size" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_screen_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_margin_padding_small"
            android:layout_marginRight="@dimen/global_margin_padding_small"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="@dimen/global_card_view_corner">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/global_margin_padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Screen Measurement"
                    android:textColor="@color/white"
                    android:textSize="@dimen/global_text_size" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
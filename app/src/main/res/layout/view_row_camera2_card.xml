<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_margin_padding"
        android:layout_marginRight="@dimen/global_margin_padding"
        android:layout_marginTop="@dimen/global_margin_padding_small"
        android:layout_marginBottom="@dimen/global_margin_padding_small"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/global_card_view_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/global_margin_padding_large">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sensor"
                    android:layout_width="@dimen/sensor_card_icon_size"
                    android:layout_height="@dimen/sensor_card_icon_size"
                    android:layout_marginRight="@dimen/global_margin_padding"
                    android:background="@color/red" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card Header"
                    android:textColor="@color/red"
                    android:textSize="@dimen/global_text_size_large"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="@dimen/sensor_card_info_icon_size"
                    android:layout_height="@dimen/sensor_card_info_icon_size"
                    android:layout_marginLeft="@dimen/global_margin_padding"
                    android:text=""
                    android:id="@+id/btn_sensor_info"
                    android:background="@color/yellow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_margin_padding_large"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Vendor"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_vendor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Version"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Power"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Max Range"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_max_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Resolution"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Min Delay"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_min_delay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="Max Delay"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_max_delay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="FIFO Reserved Event"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fifo_reserved_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/global_margin_padding"
                    android:paddingTop="@dimen/global_margin_padding_small">

                    <TextView
                        android:layout_width="@dimen/sensor_card_title_width"
                        android:layout_height="wrap_content"
                        android:text="FIFO Max Event"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fifo_max_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_margin_padding"
                        android:text="Detail"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/global_text_size" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
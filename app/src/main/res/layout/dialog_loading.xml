<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_loading_width"
    android:layout_height="@dimen/dialog_loading_height"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/global_bg"
    android:padding="@dimen/dialog_padding" >

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_text_major_margin"
        android:text="@string/global_loading"
        android:textSize="@dimen/global_text_size"
        android:textColor="@color/global_text_header" />
    
	<android.opengl.GLSurfaceView 
	    android:id="@+id/glSurfaceView"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/global_bg" />

</LinearLayout>

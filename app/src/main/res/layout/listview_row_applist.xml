<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/applist_row_layout_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/applist_row_icon_size"
        android:layout_height="@dimen/applist_row_icon_size"
        android:layout_margin="@dimen/applist_row_icon_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/applist_row_text_margin"
            android:text="@string/global_sample"
            android:textColor="@color/global_text"
            android:textSize="@dimen/global_text_header_size" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/applist_row_text_margin"
            android:text="@string/global_sample"
            android:textColor="@color/global_text"
            android:textSize="@dimen/global_text_sub_size" />
    </LinearLayout>

</LinearLayout>